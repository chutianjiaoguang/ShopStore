@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/StoreManage/StoreIn/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'stockinid', hidden: true },
                { label: '采购单号', name: 'singernumber', width: 150, align: 'left' },
                { label: '仓库名称', name: 'storename', width: 200, align: 'left' },
                { label: '供货商名称', name: 'companyname', width: 200, align: 'left' },
                { label: '采购日期', name: 'purchasedate', width: 100, align: 'left' },
                { label: '合计金额', name: 'summoney', width: 100, align: 'left' },
                { label: '订单状态', name: 'checkstatetext', width: 100, align: 'left' },
                { label: '结算状态', name: 'paystatetext', width: 100, align: 'left' },
                { label: '制单人', name: 'myname', width: 100, align: 'left' },
                { label: '创建时间', name: 'setdate', width: 100, align: 'left' }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().stockinid;
        location.href = "/StoreManage/StoreIn/Form?keyValue=" + keyValue
    }
    function btn_delete() {
        $.deleteForm({
            url: "/StoreManage/StoreIn/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().storeid },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add"  class="btn btn-primary" href="/StoreManage/StoreIn/Form"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit"  onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete"  onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>

<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
